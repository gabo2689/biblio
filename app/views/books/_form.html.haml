= render partial: "shared/print_errors", locals: {obj: @book}

.form
  = form_for @book do |f|
    %h2 book
    .form_row
      = f.label :name, "Nombre"
      = f.text_field :name
    .form_row
      = f.label :email
      = f.email_field :email
    .form_row
      = f.label :password
      = f.password_field :password
    .form_row
      = f.label :password_confirmation
      = f.password_field :password_confirmation
    #register
    = f.submit "Sign Up", class: "button"
